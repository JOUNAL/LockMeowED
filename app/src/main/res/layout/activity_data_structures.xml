<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Estructuras de Datos - LockMeow"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:gravity="center"
            android:layout_marginBottom="20dp" />

        <!-- Sección Historial (Stack) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📚 HISTORIAL DE ACCIONES (Stack)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1976D2"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvHistorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando historial..."
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDeshacerAccion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Deshacer"
                        android:backgroundTint="#FF5722"
                        android:textColor="@android:color/white"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/btnLimpiarHistorial"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Limpiar"
                        android:backgroundTint="#795548"
                        android:textColor="@android:color/white" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sección Apps Ordenadas (BinaryTree) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌳 APLICACIONES ORDENADAS (BinaryTree)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#388E3C"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvAppsOrdenadas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando aplicaciones..."
                    android:textSize="12sp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sección Cache (HashTable) -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🗂️ CACHE DE APLICACIONES (HashTable)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#7B1FA2"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvCache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando cache..."
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnLimpiarCache"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Limpiar Cache"
                    android:backgroundTint="#9C27B0"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Sección Estadísticas Generales -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📊 ESTADÍSTICAS GENERALES (Graph + Todas)"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#F57C00"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tvEstadisticas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Cargando estadísticas..."
                    android:textSize="12sp"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="12dp" />

                <Button
                    android:id="@+id/btnMostrarStats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Actualizar Estadísticas"
                    android:backgroundTint="#FF9800"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Información adicional -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="💡 Esta pantalla demuestra el uso práctico de las estructuras de datos implementadas:\n• Stack: Historial de acciones LIFO\n• BinaryTree: Apps ordenadas alfabéticamente\n• Graph: Relaciones entre aplicaciones\n• HashTable: Cache rápido de datos"
            android:textSize="14sp"
            android:textColor="#666666"
            android:background="#E8F5E8"
            android:padding="12dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>
